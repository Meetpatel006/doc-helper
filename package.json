{
  "name": "doc-helper",
  "displayName": "Doc Helper",
  "version": "1.0.0",
  "description": "Explain different documentations using AI",
  "author": "Meet Patel",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --no-source-maps --no-minify",
    "dev-firefox": "plasmo dev --target=firefox-mv3",
    "build-firefox": "plasmo build --target=firefox-mv3 ",
    "test": "plasmo test",
    "web-scrape-tests": "jest --runInBand",
    "server": "ts-node --esm functions/index.ts",
    "server:dev": "nodemon --watch functions -e ts,js --exec \"ts-node --esm\" functions/index.ts",
    "vite-dev": "vite",
    "vite-build": "vite build"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lucide-react": "latest",
    "openai": "^4.77.0",
    "plasmo": "^0.89.4",
    "puppeteer": "^22.6.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@plasmohq/messaging": "^0.6.2",
    "@types/chrome": "0.0.265",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "20.12.5",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "nodemon": "^2.0.22",
    "prettier": "3.2.5",
    "typescript": "5.4.4",
    "vite": "^4.3.0"
  }
}
